{
  "kind": "collectionType",
  "collectionName": "artworks",
  "info": {
    "name": "Artwork"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "author": {
      "type": "string",
      "required": true
    },
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "price": {
      "required": true,
      "type": "decimal"
    },
    "generatorShare": {
      "type": "integer",
      "required": true,
      "max": 100,
      "min": 0
    },
    "images": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "files",
        "images",
        "videos"
      ],
      "plugin": "upload",
      "required": true
    }
  }
}
